- if @invitation.requested?
  p
    => link_to_with_token @from, @from
    ' a demandé de rejoindre ton rendez-vous
    = link_to_with_token @availability, @availability
- else
  p
    => link_to_with_token @from, @from
    ' t'invite à rejoindre son rendez-vous
    = link_to_with_token @availability, @availability

p
  => link_to_with_token "Décliner", [@invitation, :decline], style: "display: inline-block; background-color: #ccc; padding: 0.5rem; border-radius: 5px; text-decoration: none; color: black;"
  ' ou
  => link_to_with_token "Accepter", [@invitation, :accept], style: "display: inline-block; background-color: #ecc94b; padding: 0.5rem; border-radius: 5px; text-decoration: none; color: black;"

p
  ' Tu peux aussi aller sur
  => link_to_with_token "la page du rendez-vous", @availability
  ' pour accepter ou décliner
